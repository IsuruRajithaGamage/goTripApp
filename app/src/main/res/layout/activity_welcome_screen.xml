<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"
    android:background="@color/purple_500"
    android:backgroundTint="#789E79"
    tools:context=".welcomeScreen">

    <Button
        android:id="@+id/logout"
        android:layout_width="375dp"
        android:layout_height="51dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnHotels"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:onClick="HotelList"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintTop_toBottomOf="@+id/btnplaces"
        app:layout_constraintVertical_bias="0.185"
        app:srcCompat="@drawable/appsample2"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageButton
        android:id="@+id/btnplaces"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginTop="64dp"
        android:onClick="listOfPLaces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appsample1" />

</androidx.constraintlayout.widget.ConstraintLayout>